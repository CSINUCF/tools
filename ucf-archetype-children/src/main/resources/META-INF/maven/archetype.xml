<archetype xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype/1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype/1.0.0
           http://maven.apache.org/xsd/archetype-1.0.0.xsd">
    <id>ucf-archetype-children</id>
    <sources>
        <source>src/main/java/**/*.java</source>
        <source>src/main/scala/**/*.scala</source>
    </sources>
    <resources>
        <resource>src/main/resource/*.*</resource>
    </resources>
    
    <testSources>
        <source>src/test/java/**/*.java</source>
        <source>src/test/scala/**/*.scala</source>
    </testSources>
    <testResources>
        <resource>src/test/resource/*.*</resource>
    </testResources>
</archetype>